<div class="container">
	<form name="loginForm" id="login-form" ng-submit="adminCtrl.login()" novalidate style="margin-top: 3em;">
		<div class="row row-form">
			<div class="col-xs-12 col-sm-4 col-sm-offset-4">
				<input ng-model="adminCtrl.username" class="form-control" type="text" name="username" placeholder="<%= __('Username') %>" required />
			</div>
		</div>
		<div class="row row-form">
    		<div class="col-xs-12 col-sm-4 col-sm-offset-4">
    			<input ng-model="adminCtrl.password" class="form-control" type="password" name="password" placeholder="<%= __('Password') %>" required />
    		</div>
    	</div>
		<p ng-show="adminCtrl.loginStatus==1" class="text-center" style="font-size: 1.1em; margin-top: 0.5em;">
			<span class="label label-danger">{{adminCtrl.loginMessage}}</span>
		</p>
    	<div class="row row-form">
    		<div class="col-xs-12 col-sm-4 col-sm-offset-4">
    			<input type="submit" class="btn btn-default" value="<%= __('Login') %>" />
    		</div>
    	</div>
	</form>
</div>