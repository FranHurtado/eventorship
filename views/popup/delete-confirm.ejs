<div class="modal fade" id="popupDeleteConfirm" role="dialog">
  	<div class="modal-dialog">
    	<div class="modal-content">
      		<div class="modal-header">
        		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        		<h4 class="modal-title"><%= __('Delete item confirmation') %></h4>
      		</div>
      		<div class="modal-body">
      			<div class="row">
      				<div class="col-xs-12">
      					<p><%= __('Are you sure that you want to delete this item forever?') %></p>
      				</div>
      			</div>
      		</div><!-- .modal-body -->
      		<div class="modal-footer">
      		<div class="row">
	        		<div class="col-xs-6 col-sm-2 col-sm-offset-4">
	        			<a href="#" ng-click="adminUserCtrl.deleteUser()" class="btn btn-default"><%= __('Delete') %></a>
	        		</div>
	        		<div class="col-xs-6 col-sm-2">
	        			<a href="#" data-dismiss="modal" class="btn btn-dark"><%= __('Cancel') %></a>
	        		</div>
	        	</div>
    		</div>
    	</div><!-- .modal-content -->
  	</div><!-- .modal-dialog -->
</div><!-- .modal -->