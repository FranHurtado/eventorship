<div class="modal fade" id="popupCreateUser" role="dialog">
  	<div class="modal-dialog">
    	<div class="modal-content">
      		<div class="modal-header">
        		<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        		<h4 class="modal-title"><%= __('Create new account') %></h4>
      		</div>
      		<div class="modal-body">
      			<form name="createUserForm" id="create-user-form" ng-controller="UserController as userCtrl" ng-submit="userCtrl.create()" novalidate>
      				<div class="row" ng-show="userCtrl.status==0">
	      				<div class="col-xs-12 col-sm-10 col-sm-offset-1">
							<p ng-show="userCtrl.status==0" class="text-center" style="font-size: 1.1em; margin-top: 0.5em;">{{userCtrl.message}}</p>
			        	</div>
		        		<div class="col-xs-12 col-sm-4 col-sm-offset-4">
		        			<a href="/<%= lang %>" class="btn btn-default" data-dismiss="modal"><%= __('Close') %></a>
		        		</div>
		        	</div> <!-- .row message ok -->
	        		<div class="row" ng-hide="userCtrl.status==0">
	        			<div class="col-xs-12 col-sm-6">
	        				<input ng-model="userCtrl.user.firstname" class="form-control" type="text" name="lastanme" placeholder="<%= __('First name') %>" required />
	        			</div>
		        		<div class="col-xs-12 col-sm-6">
		        			<input ng-model="userCtrl.user.lastname" class="form-control" type="text" name="lastname" placeholder="<%= __('Last name') %>" required />
		        		</div>
		        	</div> <!-- .row full name -->
		        	<div class="row" ng-hide="userCtrl.status==0">
	        			<div class="col-xs-12">
	        				<input ng-model="userCtrl.user.email" class="form-control" type="email" name="email" placeholder="<%= __('Email') %>" required />
	        			</div>
		        	</div> <!-- .row email -->
		        	<div class="row" ng-hide="userCtrl.status==0">
	        			<div class="col-xs-12 col-sm-6">
	        				<input ng-model="userCtrl.user.password" class="form-control" type="password" name="password" placeholder="<%= __('Password') %>" required />
	        			</div>
		        		<div class="col-xs-12 col-sm-6">
		        			<input ng-model="userCtrl.user.password2" class="form-control" type="password" name="password2" placeholder="<%= __('Repeat password') %>" required />
		        		</div>
		        	</div> <!-- .row password -->
		        	<div class="row" ng-hide="userCtrl.status==0">
		        		<div class="col-xs-12 col-sm-6">
		        			<bootstrap-dropdown data-ng-model="userCtrl.user.country" data-placeholder="<%= __('Select country') %>" data-dropdown-data="userCtrl.countries" ng-change="userCtrl.loadCities()"></bootstrap-dropdown>
		        		</div>
	        			<div class="col-xs-12 col-sm-6">
	        				<bootstrap-dropdown data-ng-model="userCtrl.user.city" data-placeholder="<%= __('Select city') %>" data-dropdown-data="userCtrl.cities"></bootstrap-dropdown>
	        			</div>
		        	</div> <!-- .row city and country -->
		        	<div class="row" ng-hide="userCtrl.status==0">
	        			<div class="col-xs-12">
							<bootstrap-dropdown data-ng-model="userCtrl.user.profile" data-placeholder="<%= __('Select profile type') %>" data-dropdown-data="userCtrl.profiles"></bootstrap-dropdown>
	        			</div>
		        	</div>
		        	<div class="row" ng-show="userCtrl.status==1">
		        		<div class="col-xs-12">
		        			<p ng-show="userCtrl.status==1" class="text-center" style="font-size: 1.1em; margin-top: 0.5em;">
								<span class="label label-danger">{{userCtrl.message}}</span>
							</p>
		        		</div>
		        	</div> <!-- .row message error -->
		        	<div class="row" ng-hide="userCtrl.status==0">
		        		<div class="col-xs-12 col-sm-4 col-sm-offset-4">
		        			<input type="submit" class="btn btn-default" value="<%= __('Create account') %>" />
		        		</div>
		        	</div>
	        	</form>
      		</div><!-- .modal-body -->
      		<div class="modal-footer">
    		</div>
    	</div><!-- .modal-content -->
  	</div><!-- .modal-dialog -->
</div><!-- .modal -->